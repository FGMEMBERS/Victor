
<PropertyList>
 
 <filter>
  <name>Nosewheel Steering</name>
  <type>gain</type>
  <debug>false</debug>
  <input>
   <condition>
    <property>/preferences/couple-nosewheel-to-rudder</property>
   </condition>
   <property>/controls/flight/rudder</property>
   <scale>-1</scale>
  </input>
  <input>
   <condition>
    <not>
	 <property>/preferences/couple-nosewheel-to-rudder</property>
	</not>
   </condition>
   <property>/controls/gear/nosewheel-steering</property>
  </input>
  <output>
   <property>/controls/gear/steering-norm</property>
  </output>
  <gain>
   <value>1.0</value>
  </gain>
 </filter>
 
