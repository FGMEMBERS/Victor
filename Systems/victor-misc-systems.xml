 <filter>
  <name>Damping</name>
  <debug>false</debug>
  <type>reciprocal</type>
  <input>
   <property>/velocities/airspeed-kt</property>
   <offset>120</offset>
  </input>
  <output>
   <property>/systems/damping/damping-scale</property>
  </output>
  <gain>190</gain>
  <u_min>0.1</u_min>
  <u_max>1.0</u_max>
 </filter>
 
 <filter>
  <name>Pitch Damping</name>
  <type>gain</type>
  <debug>false</debug>
  <input>
   <property>/systems/PFCUs/port-elevator</property>
   <property>/systems/PFCUs/starboard-elevator</property>
   <scale>1</scale>
  </input>
  <output>
   <property>/systems/damping/elevator</property>
  </output>
  <gain>
   <property>/systems/damping/damping-scale</property>
  </gain>
  <min>0</min>
  <max>1</max>
 </filter>

</PropertyList>