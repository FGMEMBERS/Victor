<?xml version="1.0"?>

<PropertyList>

<fx>

<!-- External Sounds -->
 <engine>
   <name>engine</name>
   <path>Aircraft/victor/Sounds/jet.wav</path>
   <mode>looped</mode>
<condition>
	<not>
	<property>sim/current-view/internal</property>
	</not>
	<not>
	<property>engines/engine[0]/out-of-fuel</property>
	</not>
</condition>
   <condition>
    <or>
     <property>/engines/engine[0]/running</property>
     <property>/engines/engine[1]/running</property>     
    </or>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.1</factor>
    <offset>0.05</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.1</factor>
    <offset>0.05</offset>
   </volume>    
  </engine>

  <engine>
   <name>whine</name>
   <path>Aircraft/victor/Sounds/jet1.wav</path>
   <mode>looped</mode>
<condition>
	<not>
	<property>sim/current-view/internal</property>
	</not>
	<not>
	<property>engines/engine[0]/out-of-fuel</property>
	</not>
</condition>
   <condition>
    <or>
     <property>/engines/engine[0]/running</property>
     <property>/engines/engine[1]/running</property>     
    </or>
   </condition>
   <volume>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.10</factor>
    <offset>0.1</offset>
   </volume>
   <volume>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>ln</type>
    <factor>0.10</factor>
    <offset>0.1</offset>
   </volume> 

   <pitch>
    <property>/engines/engine[0]/thrust_lb[0]</property>
    <type>log</type>
    <factor>0.20</factor>
    <offset>0.10</offset>
   </pitch>
   <pitch>
    <property>/engines/engine[1]/thrust_lb[0]</property>
    <type>log</type>
    <factor>0.20</factor>
    <offset>0.10</offset>
   </pitch>   
  </engine>


<!-- flyby -->
		<flyby>
			<name>fly-by</name>
			<mode>once</mode>
			<path>Aircraft/victor/Sounds/flyby.wav</path>
			<condition>
				<and>
	    <greater-than>
	     	<property>/velocities/mach</property>
	     	<value>0.4</value>
	    </greater-than>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>6</value>
				</equals>
				</and>
				<not>
         	<property>/sim/current-view/internal</property>
	 	<property>/engines/engine/out-of-fuel</property>
     	</not>
		</condition>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.001</factor>
			</volume>
			
		</flyby>
</fx>

</PropertyList>
