
<PropertyList>

 <path>adf-tuner-panel.ac</path>
 
 <animation>
  <object-name>ADF-needle</object-name>
  <type>rotate</type>
  <property>/instrumentation/adf/needle-position-norm</property>
  <factor>280</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <type>select</type>
  <object-name>glow.left</object-name>
  <object-name>glow.right</object-name>
  <condition>
   <property>/instrumentation/adf/operable</property>
  </condition>
 </animation>
 
 <animation>
   <type>light</type>
   <light-type>point</light-type>
   <name>DialGlow</name>
   <object-name>glow.left</object-name>
   <nopreview/>
   <position>
     <x>0.07</x>
     <y>-0.08</y>
     <z>0.07</z>
   </position>
   <ambient>
     <r>0.00</r>
     <g>0.00</g>
     <b>0.00</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.75</r>
     <g>0.75</g>
     <b>0.4</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.8</r>
     <g>0.8</g>
     <b>0.5</b>
     <a>1.0</a>
   </specular>
   <attenuation>
     <c>0.7</c>
     <l>0.7</l>
     <q>0.7</q>
   </attenuation>
   <dim-factor>
      <property>/controls/rotary/AEOs/generator-panel-dimmer</property>
      <factor>1.0</factor>
	  <offset>-0.15</offset>
      <min>0</min>
      <max>1.0</max>
   </dim-factor>
   <exponent>20</exponent>
   <cutoff>2</cutoff>
   <near-m>0.1</near-m>
   <far-m>0.2</far-m>
 </animation>
 
 <animation>
   <type>light</type>
   <light-type>point</light-type>
   <name>DialGlow2</name>
   <object-name>glow.right</object-name>
   <nopreview/>
   <position>
     <x>0.07</x>
     <y>0.08</y>
     <z>0.07</z>
   </position>
   <ambient>
     <r>0.00</r>
     <g>0.00</g>
     <b>0.00</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.75</r>
     <g>0.75</g>
     <b>0.4</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.8</r>
     <g>0.8</g>
     <b>0.5</b>
     <a>1.0</a>
   </specular>
   <attenuation>
     <c>0.7</c>
     <l>0.7</l>
     <q>0.7</q>
   </attenuation>
   <dim-factor>
      <property>/controls/rotary/AEOs/generator-panel-dimmer</property>
      <factor>1.0</factor>
	  <offset>-0.15</offset>
      <min>0</min>
      <max>1.0</max>
   </dim-factor>
   <exponent>20</exponent>
   <cutoff>2</cutoff>
   <near-m>0.1</near-m>
   <far-m>0.2</far-m>
 </animation>
 
</PropertyList>